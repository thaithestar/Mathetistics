<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.thait.mathetistics.Pt"
    android:background="#2196F3">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Pythagorean Theorem"
        android:id="@+id/p_t"
        android:textSize="30dp"
        android:textColor="@color/white"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:layout_below="@+id/p_t"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp"
        android:id="@+id/linearLayout5">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:id="@+id/des" />

        </ScrollView>



    </LinearLayout>

    <ImageView
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:src="@drawable/p_t"
        android:layout_below="@+id/linearLayout5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:id="@+id/pic1"/>

    <ImageView
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:src="@drawable/pt_eq"
        android:layout_alignBottom="@+id/button5"
        android:layout_alignRight="@+id/pic1"
        android:layout_alignEnd="@+id/pic1"
        android:id="@+id/pic2"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="c2 = a2 + b2"
        android:id="@+id/textView9"
        android:layout_below="@+id/linearLayout5"
        android:layout_marginTop="50dp"
        android:textColor="@color/white"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:id="@+id/button5"
        android:layout_below="@+id/pic1"
        android:textColor="@color/red"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="ptNext"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="c = _______"
        android:id="@+id/textView10"
        android:textColor="@color/white"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/textView9"
        android:layout_alignRight="@+id/p_t"
        android:layout_alignEnd="@+id/p_t" />


</RelativeLayout>
