<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.thait.mathetistics.Pt_ex"
    android:background="#2196F3">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Pythagorean Theorem"
        android:id="@+id/p_t"
        android:textSize="30dp"
        android:textColor="@color/white"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/p_t"
        android:id="@+id/first">

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:textColor="@color/white"
            android:text="Example Problem"
            android:layout_marginTop="30dp"/>

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/pt_ex"/>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done"
        android:id="@+id/ptDone"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:textColor="@color/red"
        android:onClick="finishPt"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_below="@+id/first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:id="@+id/linearLayout9">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="a2"
        android:textSize="25dp"
        android:textColor="@color/white"
        android:id="@+id/line1a"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" = "
            android:textSize="25dp"
            android:textColor="@color/white"
            android:id="@+id/equal_sign" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="b2"
        android:textSize="25dp"
        android:textColor="@color/white"
        android:id="@+id/line1b"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" + "
            android:textSize="25dp"
            android:textColor="@color/white"
            android:id="@+id/plus_sign" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="c2"
        android:textSize="25dp"
        android:textColor="@color/white"
        android:id="@+id/line1c" />

    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout9"
        android:text="line2"
        android:layout_marginTop="15dp"
        android:textSize="25dp"
        android:textColor="@color/white"
        android:id="@+id/line2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/line2"
        android:layout_below="@+id/linearLayout9"
        android:text=" = "
        android:layout_marginTop="15dp"
        android:textSize="25dp"
        android:textColor="@color/white"
        android:id="@+id/equalS"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DROP"
        android:id="@+id/button8"
        android:layout_below="@+id/linearLayout9"
        android:layout_toRightOf="@+id/equalS" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="line3"
        android:layout_marginTop="15dp"
        android:textSize="25dp"
        android:layout_below="@+id/line2"
        android:textColor="@color/white"
        android:id="@+id/line3"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/line2"
        android:layout_below="@+id/equalS"
        android:text=" = "
        android:layout_marginTop="15dp"
        android:textSize="25dp"
        android:textColor="@color/white"
        android:id="@+id/equalS2"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DROP"
        android:id="@+id/button9"
        android:layout_below="@+id/equalS"
        android:layout_toRightOf="@+id/equalS2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="x = "
            android:layout_below="@+id/line3"
            android:layout_marginTop="15dp"
            android:textSize="25dp"
            android:textColor="@color/white"
            android:id="@+id/line4"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DROP"
        android:id="@+id/button10"
        android:layout_below="@+id/equalS2"
        android:layout_toRightOf="@+id/line4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="x = 10"
            android:layout_marginTop="15dp"
            android:textSize="25dp"
            android:layout_below="@+id/line4"
            android:textColor="@color/white"
            android:id="@+id/line5"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Drag over"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:id="@+id/noDrag"
        android:layout_below="@+id/first"
        android:layout_alignLeft="@+id/drag1_box"
        android:layout_alignStart="@+id/drag1_box" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/noDrag"
        android:layout_marginTop="7dp"
        android:id="@+id/drag1_box"
        android:layout_toRightOf="@+id/button8"
        android:layout_marginLeft="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="62"
        android:layout_marginTop="5dp"
        android:textSize="25dp"
        android:textColor="@color/white"
        android:id="@+id/drag1_1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" + "
            android:layout_marginTop="5dp"
            android:textSize="25dp"
            android:textColor="@color/white"
            android:id="@+id/add_sign"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="82"
            android:layout_marginTop="5dp"
            android:textSize="25dp"
            android:textColor="@color/white"
            android:id="@+id/drag1_2"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/drag1_box"
        android:layout_toRightOf="@+id/button8"
        android:layout_marginLeft="20dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="drag2"
            android:layout_marginTop="15dp"
            android:textSize="25dp"
            android:textColor="@color/white"
            android:id="@+id/drag2"/>

        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src ="@drawable/pt_ex2"/>


    </LinearLayout>




</RelativeLayout>
